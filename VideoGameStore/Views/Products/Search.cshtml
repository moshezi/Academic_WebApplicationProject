@model IEnumerable<VideoGameStore.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="gaming_wallpaper">
    
    <h1>Search for: "@ViewBag.productName"</h1>
    @using (Html.BeginForm("Search", "Products"))
    {
        <p>
            Find by name: @Html.TextBox("productName")
            <input type="submit" value="Search" />
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isExist)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isExist)
                </td>
                <td>
                    @Html.ActionLink("Order", "Create", "Orders", new { id = item.ProductID }, null)
                </td>
            </tr>
        }

    </table>


</div>